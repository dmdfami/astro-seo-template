---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import Container from '@components/sections/Container.astro';
import Section from '@components/sections/Section.astro';
import siteConfig from '../../site-config.json';
---

<BaseLayout title="About Us" description={`Learn more about ${siteConfig.site.name}`}>
  <Header />

  <Section padding="xl" background="gradient">
    <Container>
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl lg:text-6xl font-bold font-heading mb-6">About Us</h1>
        <p class="text-xl opacity-90">
          We are committed to delivering premium quality industrial solutions to businesses worldwide.
        </p>
      </div>
    </Container>
  </Section>

  <Section padding="xl">
    <Container size="md">
      <div class="prose dark:prose-invert max-w-none">
        <h2>Our Story</h2>
        <p>Founded with a vision to transform the industrial solutions market, {siteConfig.site.name} has grown to become a trusted partner for hundreds of businesses.</p>

        <h2>Our Mission</h2>
        <p>To deliver premium quality products with exceptional customer service, ensuring our clients achieve their goals efficiently.</p>

        <h2>Our Values</h2>
        <ul>
          <li><strong>Quality First</strong> — Every product meets the highest standards</li>
          <li><strong>Customer Focus</strong> — Your success is our priority</li>
          <li><strong>Innovation</strong> — Constantly improving our processes</li>
        </ul>
      </div>
    </Container>
  </Section>

  <Footer />
</BaseLayout>
