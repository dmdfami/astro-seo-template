---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import Container from '@components/sections/Container.astro';
import Section from '@components/sections/Section.astro';
---

<BaseLayout title="Search" description="Search our site">
  <Header />

  <Section padding="xl">
    <Container size="md">
      <h1 class="text-4xl font-bold font-heading mb-8">Search</h1>
      <div id="search" class="pagefind-ui"></div>
    </Container>
  </Section>

  <Footer />
</BaseLayout>

<script is:inline>
  // Pagefind UI is loaded from the built pagefind assets
  window.addEventListener('DOMContentLoaded', () => {
    new PagefindUI({
      element: '#search',
      showSubResults: true,
      showImages: false,
    });
  });
</script>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script src="/pagefind/pagefind-ui.js" is:inline></script>
