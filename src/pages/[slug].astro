---
import { getCollection, render } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import Container from '@components/sections/Container.astro';
import Section from '@components/sections/Section.astro';
import Breadcrumb from '@components/seo/Breadcrumb.astro';

export async function getStaticPaths() {
  const pages = await getCollection('pages', ({ data }) =>
    !data.draft && data.contentType === 'generic'
  );
  return pages.map(page => ({
    params: { slug: page.id },
    props: { page },
  }));
}

const { page } = Astro.props;
const { Content } = await render(page);
---

<BaseLayout title={page.data.title} description={page.data.description}>
  <Header />

  <Section padding="xl">
    <Container size="md">
      <Breadcrumb
        items={[
          { label: 'Home', href: '/' },
          { label: page.data.title }
        ]}
      />

      <article class="prose dark:prose-invert max-w-none" data-pagefind-body>
        <h1>{page.data.title}</h1>
        <Content />
      </article>
    </Container>
  </Section>

  <Footer />
</BaseLayout>
