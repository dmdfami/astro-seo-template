---
import { getCollection, render } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import Container from '@components/sections/Container.astro';
import Section from '@components/sections/Section.astro';
import Breadcrumb from '@components/seo/Breadcrumb.astro';
import SchemaRenderer from '@components/seo/SchemaRenderer.astro';
import { getLayout } from '../lib/layout-registry';

export async function getStaticPaths() {
  const pages = await getCollection('pages', ({ data }) =>
    !data.draft && data.contentType !== 'homepage'
  );
  return pages.map(page => ({
    params: { slug: page.id },
    props: { page },
  }));
}

const { page } = Astro.props;
const { Content } = await render(page);
const { contentType } = page.data;
const layout = getLayout(contentType);
const { pattern, h1Auto, breadcrumb } = layout;
const url = `${Astro.site}${page.id}`;
---

<BaseLayout
  title={page.data.title}
  description={page.data.description}
  image={page.data.image?.src}
  type={pattern === 'split' ? 'product' : 'website'}
  ogTitle={page.data.ogTitle}
  ogDescription={page.data.ogDescription}
  category={page.data.category}
>
  <SchemaRenderer
    slot="schema"
    contentType={contentType}
    frontmatter={page.data}
    url={url}
  />
  <Header />

  {pattern === 'fullwidth' && (
    <main id="main-content" data-pagefind-body>
      {breadcrumb && (
        <Container>
          <Breadcrumb items={[
            { label: 'Home', href: '/' },
            { label: page.data.title }
          ]} />
        </Container>
      )}
      <Content />
    </main>
  )}

  {pattern === 'split' && (
    <main id="main-content" data-pagefind-body>
      <Container>
        {breadcrumb && (
          <Breadcrumb items={[
            { label: 'Home', href: '/' },
            { label: page.data.title }
          ]} />
        )}
        <div class="grid lg:grid-cols-2 gap-12 py-8 mb-12">
          <div>
            {page.data.image && (
              <img src={page.data.image.src} alt={page.data.image.alt}
                class="rounded-xl w-full" loading="lazy" />
            )}
          </div>
          <div>
            {h1Auto && <h1 class="heading-hero mb-4">{page.data.title}</h1>}
            <p class="text-xl text-neutral-600 mb-6">
              {page.data.description}
            </p>
            {page.data.specs && (
              <div class="border border-neutral-200 rounded-lg overflow-hidden">
                <table class="w-full text-sm">
                  {Object.entries(page.data.specs).map(([key, value]) => (
                    <tr class="border-b border-neutral-200 last:border-b-0">
                      <td class="px-4 py-3 font-medium bg-neutral-50 w-1/3 capitalize">{key}</td>
                      <td class="px-4 py-3">{value}</td>
                    </tr>
                  ))}
                </table>
              </div>
            )}
          </div>
        </div>
        {layout.proseWrapper ? (
          <div class="prose max-w-none">
            <Content />
          </div>
        ) : (
          <Content />
        )}
      </Container>
    </main>
  )}

  {(pattern === 'prose' || !['fullwidth', 'split', 'prose'].includes(pattern)) && (
    <Section padding="xl">
      <Container size="md">
        {breadcrumb && (
          <Breadcrumb items={[
            { label: 'Home', href: '/' },
            { label: page.data.title }
          ]} />
        )}
        <article class="prose max-w-none" id="main-content" data-pagefind-body>
          {h1Auto && <h1 class="heading-hero mb-4">{page.data.title}</h1>}
          <Content />
        </article>
      </Container>
    </Section>
  )}

  <Footer />
</BaseLayout>
