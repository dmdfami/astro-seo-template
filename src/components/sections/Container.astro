---
import { cn } from '@lib/utils';

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const { size = 'lg', class: className } = Astro.props;

const sizes: Record<string, string> = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  xl: 'max-w-[1440px]',
  full: 'max-w-full',
};

const classes = cn('mx-auto px-4 sm:px-6 lg:px-8', sizes[size], className);
---

<div class={classes}>
  <slot />
</div>
