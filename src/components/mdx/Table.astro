---
interface Props {
  headers: string[];
  rows: string[][];
  striped?: boolean;
  compact?: boolean;
}

const { headers, rows, striped = true, compact = false } = Astro.props;
const cellPadding = compact ? 'px-3 py-2' : 'px-4 py-3';
---

<div class="overflow-x-auto my-6 rounded-xl border border-neutral-200">
  <table class="w-full text-sm">
    <thead>
      <tr class="bg-neutral-50">
        {headers.map(header => (
          <th class={`${cellPadding} text-left font-semibold text-neutral-900 border-b border-neutral-200`}>
            {header}
          </th>
        ))}
      </tr>
    </thead>
    <tbody>
      {rows.map((row, i) => (
        <tr class={`border-b border-neutral-100 last:border-b-0 ${striped && i % 2 === 1 ? 'bg-neutral-50/50' : ''}`}>
          {row.map(cell => (
            <td class={`${cellPadding} text-neutral-700`}>
              {cell}
            </td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>
