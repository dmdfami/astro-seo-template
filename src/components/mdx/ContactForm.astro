---
import Button from '../ui/Button.astro';
import Input from '../ui/Input.astro';

interface Field {
  name: string;
  type: 'text' | 'email' | 'tel' | 'textarea';
  label: string;
  required?: boolean;
  placeholder?: string;
}

interface Props {
  fields?: Field[];
  submitText?: string;
  class?: string;
}

const {
  fields = [
    { name: 'name', type: 'text', label: 'Name', required: true, placeholder: 'Your name' },
    { name: 'email', type: 'email', label: 'Email', required: true, placeholder: 'your@email.com' },
    { name: 'message', type: 'textarea', label: 'Message', required: true, placeholder: 'Your message' },
  ],
  submitText = 'Send Message',
  class: className
} = Astro.props;
---

<form
  class={`contact-form space-y-6 ${className || ''}`}
  action="/api/contact"
  method="POST"
>
  {fields.map((field) => (
    <div>
      <label
        for={field.name}
        class="block text-sm font-medium text-neutral-900 dark:text-white mb-2"
      >
        {field.label}
        {field.required && <span class="text-red-600 dark:text-red-400">*</span>}
      </label>
      {field.type === 'textarea' ? (
        <textarea
          id={field.name}
          name={field.name}
          required={field.required}
          placeholder={field.placeholder}
          rows={5}
          class="w-full px-4 py-2 rounded-lg border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-950 text-neutral-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-600 dark:focus:ring-primary-400"
        ></textarea>
      ) : (
        <Input
          id={field.name}
          name={field.name}
          type={field.type}
          required={field.required}
          placeholder={field.placeholder}
        />
      )}
    </div>
  ))}

  <div class="form-message text-sm hidden"></div>

  <Button type="submit" variant="primary" size="lg" class="w-full">
    {submitText}
  </Button>
</form>

<script is:inline>
  function initContactForms() {
    document.querySelectorAll('.contact-form').forEach((form) => {
      form.addEventListener('submit', async (e) => {
        const messageEl = form.querySelector('.form-message');
        const submitBtn = form.querySelector('button[type="submit"]');
        const fields = form.querySelectorAll('input, textarea');

        let isValid = true;
        fields.forEach((field) => {
          if (field.required && !field.value.trim()) {
            isValid = false;
            field.classList.add('border-red-600', 'dark:border-red-400');
          } else {
            field.classList.remove('border-red-600', 'dark:border-red-400');
          }
        });

        if (!isValid) {
          e.preventDefault();
          messageEl.textContent = 'Please fill in all required fields.';
          messageEl.className = 'form-message text-sm text-red-600 dark:text-red-400';
          messageEl.classList.remove('hidden');
          return;
        }

        const emailField = form.querySelector('input[type="email"]');
        if (emailField && !emailField.value.includes('@')) {
          e.preventDefault();
          messageEl.textContent = 'Please enter a valid email address.';
          messageEl.className = 'form-message text-sm text-red-600 dark:text-red-400';
          messageEl.classList.remove('hidden');
          emailField.classList.add('border-red-600', 'dark:border-red-400');
          return;
        }
      });
    });
  }

  initContactForms();
  document.addEventListener('astro:page-load', initContactForms);
</script>
