---
interface Props {
  author?: string;
  source?: string;
  variant?: 'default' | 'highlight' | 'minimal';
}

const { author, source, variant = 'default' } = Astro.props;

const variantClasses = {
  default: 'border-l-4 border-primary-500 bg-neutral-50 pl-6 pr-4 py-4',
  highlight: 'border-l-4 border-accent-500 bg-gradient-to-r from-primary-50 to-secondary-50 pl-6 pr-4 py-6',
  minimal: 'border-l-2 border-neutral-300 pl-4 py-2'
}[variant];
---

<blockquote class={`${variantClasses} rounded-r-lg my-6`}>
  <div class="text-lg italic text-neutral-700 leading-relaxed">
    <slot />
  </div>
  {(author || source) && (
    <footer class="mt-3 text-sm text-neutral-500">
      {author && <span class="font-medium text-neutral-700">â€” {author}</span>}
      {source && <span>, {source}</span>}
    </footer>
  )}
</blockquote>
