---
interface Props {
  variant?: 'info' | 'warning' | 'error' | 'success';
  title?: string;
  dismissible?: boolean;
}

const { variant = 'info', title, dismissible = false } = Astro.props;

const variantClasses = {
  info: 'bg-blue-50 border-blue-200 text-blue-800',
  warning: 'bg-yellow-50 border-yellow-200 text-yellow-800',
  error: 'bg-red-50 border-red-200 text-red-800',
  success: 'bg-green-50 border-green-200 text-green-800'
}[variant];

const iconMap = {
  info: 'ℹ️',
  warning: '⚠️',
  error: '❌',
  success: '✅'
}[variant];
---

<div class={`${variantClasses} border rounded-lg p-4 my-4`} role="alert">
  <div class="flex items-start gap-3">
    <span class="text-lg flex-shrink-0" aria-hidden="true">{iconMap}</span>
    <div class="flex-1">
      {title && <p class="font-semibold mb-1">{title}</p>}
      <div class="text-sm"><slot /></div>
    </div>
    {dismissible && (
      <button class="text-current opacity-50 hover:opacity-100 transition-opacity" aria-label="Dismiss" onclick="this.closest('[role=alert]').remove()">✕</button>
    )}
  </div>
</div>
