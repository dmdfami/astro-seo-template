---
interface StepItem {
  title: string;
  description: string;
}

interface Props {
  items?: StepItem[];
}

const { items = [] } = Astro.props;
const hasSlot = Astro.slots.has('default');
---

<div class="space-y-8">
  {hasSlot ? (
    <slot />
  ) : (
    items.map((item, index) => (
      <div class="flex gap-6 relative">
        <div class="flex-shrink-0 relative">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-500 to-primary-600 text-white flex items-center justify-center text-xl font-bold shadow-md">
            {index + 1}
          </div>
          {index < items.length - 1 && (
            <div class="absolute top-12 left-1/2 -translate-x-1/2 w-0.5 h-8 bg-primary-200"></div>
          )}
        </div>
        <div class="flex-1 pt-2 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow p-4">
          <h3 class="text-xl font-bold text-neutral-900 mb-2">
            {item.title}
          </h3>
          <p class="text-neutral-600">
            {item.description}
          </p>
        </div>
      </div>
    ))
  )}
</div>
