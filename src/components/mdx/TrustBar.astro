---
import { cn } from '@lib/utils';

interface TrustItem {
  icon: string;
  text: string;
}

interface Props {
  items: TrustItem[];
  variant?: 'compact' | 'spacious';
  class?: string;
}

const { items, variant = 'compact', class: className } = Astro.props;

const iconPaths: Record<string, string> = {
  verified: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  secure: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
  support: 'M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z',
  shipping: 'M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4',
};
---

<div class={cn(
  'trust-bar flex flex-wrap items-center justify-center',
  variant === 'compact' ? 'gap-6' : 'gap-8',
  className
)}>
  {items.map((item) => (
    <div class={cn(
      'flex items-center gap-2',
      variant === 'spacious' && 'px-4 py-2 bg-neutral-50 rounded-xl shadow-sm'
    )}>
      <svg
        class="w-5 h-5 text-green-600 flex-shrink-0"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d={iconPaths[item.icon] || iconPaths.verified}
        />
      </svg>
      <span class="text-sm font-medium text-neutral-700">
        {item.text}
      </span>
    </div>
  ))}
</div>
