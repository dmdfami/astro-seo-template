---
import { cn } from '@lib/utils';

interface Props {
  specs: Record<string, string>;
  variant?: 'table' | 'grid';
  class?: string;
}

const { specs, variant = 'table', class: className } = Astro.props;
const entries = Object.entries(specs);
---

{variant === 'table' ? (
  <div class={cn('overflow-x-auto', className)}>
    <table class="w-full border border-neutral-200 dark:border-neutral-800 rounded-lg overflow-hidden">
      <tbody class="divide-y divide-neutral-200 dark:divide-neutral-800">
        {entries.map(([key, value]) => (
          <tr class="hover:bg-neutral-50 dark:hover:bg-neutral-900">
            <td class="px-6 py-4 font-medium text-neutral-900 dark:text-white bg-neutral-50 dark:bg-neutral-900 w-1/3">
              {key}
            </td>
            <td class="px-6 py-4 text-neutral-600 dark:text-neutral-400">
              {value}
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
) : (
  <div class={cn('grid md:grid-cols-2 gap-4', className)}>
    {entries.map(([key, value]) => (
      <div class="border border-neutral-200 dark:border-neutral-800 rounded-lg p-4">
        <div class="text-sm font-medium text-neutral-600 dark:text-neutral-400 mb-1">
          {key}
        </div>
        <div class="text-lg font-bold text-neutral-900 dark:text-white">
          {value}
        </div>
      </div>
    ))}
  </div>
)}
